@rendermode InteractiveServer
@inherits LayoutComponentBase

<MudThemeProvider Theme="@_theme" IsDarkMode="true"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1" Dense>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudText Typo="Typo.h6" Style="font-weight: 700;">
            üèéÔ∏è COTA Real-Time Analytics
        </MudText>
        <MudSpacer/>
        <MudText Typo="Typo.body2" Color="Color.Secondary">
            Circuit of the Americas
        </MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Navigation</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>

    <MudMainContent>
        <div style="min-height: 100vh;">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = false;

    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#00ff88",
            Secondary = "#00d4ff",
            AppbarBackground = "#0a0e27",
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#00ff88",
            Secondary = "#00d4ff",
            AppbarBackground = "#0a0e27",
            Background = "#0a0e27",
            BackgroundGray = "#1a1f3a",
            Surface = "#141932",
            DrawerBackground = "#0a0e27",
            DrawerText = "rgba(255,255,255, 0.7)",
            ActionDefault = "#ffffff",
            TextPrimary = "#ffffff",
            TextSecondary = "rgba(255,255,255, 0.7)",
            Dark = "#0a0e27",
            DarkContrastText = "#ffffff"
        }
    };

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
