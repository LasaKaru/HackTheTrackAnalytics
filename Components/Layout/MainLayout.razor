@inherits LayoutComponentBase

<MudThemeProvider Theme="@_theme" IsDarkMode="true"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1" Dense>
        <MudText Typo="Typo.h6" Style="font-weight: 700;">
            üèéÔ∏è COTA Real-Time Analytics
        </MudText>
        <MudSpacer/>
        <MudText Typo="Typo.body2" Color="Color.Secondary">
            Circuit of the Americas
        </MudText>
    </MudAppBar>

    <MudDrawer Open="true" Elevation="2" Variant="@DrawerVariant.Mini" ClipMode="@DrawerClipMode.Always" Width="240px" MiniWidth="60px">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Navigation</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>

    <MudMainContent>
        <div style="min-height: 100vh;">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

